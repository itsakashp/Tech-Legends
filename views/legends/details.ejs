<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/info.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Tech Legends</title>
</head>
<body  class="d-flex flex-column vh-100" style="background: linear-gradient(to right, #ccdfff, #b8f97a);">
    <%- include('../partials/navbar') %> 
    <main class="container mt-5" >
      <%- include('../partials/flash') %> 
      <div class="row">
    <div class="col-md-6 offset-md-3 my-5">
        <div class="card ">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <% legend.images.forEach((img, i) => { %>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%=i%> " <%=i === 0? 'class=active aria-current=true': ''%> aria-label="Slide <%=i+1%> "></button>
              <% }) %>  
              <!-- <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button> -->
            </div>
            <div class="carousel-inner">
              <% legend.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                  <img src="<%=img.url%>" class="d-block w-100" alt="<%=legend.name%>"  height="600">
                </div>
              <% }) %> 
          <% if(legend.images.length > 1){ %> 
          </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %> 
          </div>
            <!-- <img src="<%=legend.image%>" class="card-img-top" alt="<%=legend.name%>"  height="600"> -->
            <div class="card-body">
              <h1 class="card-title"><%=legend.name%></h1>
              <p class="card-text" style="white-space: pre-wrap;"><%= legend.about %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>ðŸŒŽ</strong> <%=legend.POB %></li>
              <li class="list-group-item"><strong>Born:</strong> <%=legend.DOB %> </li>
            </ul>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Posted By:</strong> <%=legend.author.username%></li>
            </ul>
            <% if(currentUser && legend.author.equals(currentUser._id)){ %> 
            <div class="card-body">
              <a href="/legends/<%=legend._id%>/edit" class="btn btn-warning card-link">Edit</a>
              <form class="d-inline" method="POST" action="/legends/<%=legend._id%>?_method=DELETE">
                <button class="btn btn-danger card-link">Delete</button></form>
            </div>
            <% } %> 
          <% if(currentUser){ %> 
          <div class="card-body">
            <form class="needs-validation" action="/legends/<%=legend._id%>/comments" method="POST" novalidate>
              <textarea class="form-control" placeholder="Add a Comment....."  name="comment[text]" id="text" cols="10" rows="1" required></textarea>
              <div class="invalid-feedback">
                Cannot Post an Empty Comment !!!
              </div>
              <button class="btn btn-primary card-link m-2">Post</button>
            </form>
          </div>
          <% } %> 
          
            <h2 class="fw-bolder " style="text-align: center;">Comments</h2>
          <% for(let comment of legend.comments){ %> 
            <div class="card-body">
              <ul class="list-group list-group-flush"></ul>
              <li class="list-group-item"><strong>@<%=comment.author.username%></strong> <br><%=comment.text%></li>
              <% if(currentUser && comment.author._id.equals(currentUser._id)){ %> 
              <form action="/legends/<%=legend._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" >
                <button class="btn btn-sm btn-danger card-link m-2">Delete</button>
              </form>
              <% } %> 
              </ul>
            </div>
          <% } %> 
        
        </div>
    </div>
</div> 
    </main>
    <%- include('../partials/footer') %> 
    <script src="https://kit.fontawesome.com/9de6879b5e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="/js/formValidation.js"></script>
</body>
</html>
